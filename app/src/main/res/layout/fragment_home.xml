<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.home.HomeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvTitleHumidity"
        app:layout_constraintTop_toTopOf="@id/tvTitleHumidity"
        tools:text="40%" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Temperature: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleHumidity"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvTitleTemperature"
        app:layout_constraintTop_toTopOf="@id/tvTitleTemperature"
        tools:text="29" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSoilMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Soil Moisture: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTemperature"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSoilMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvTitleSoilMoisture"
        app:layout_constraintTop_toTopOf="@id/tvTitleSoilMoisture"
        tools:text="20%" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAutoWatering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Auto: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSoilMoisture" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swAutoWatering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        app:layout_constraintBottom_toBottomOf="@id/tvAutoWatering"
        app:layout_constraintStart_toEndOf="@id/tvAutoWatering"
        app:layout_constraintTop_toTopOf="@id/tvAutoWatering"
        app:thumbTint="@color/white"
        app:trackTint="@color/main_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Pump"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swAutoWatering" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTurnOnOff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_on_off"
        android:backgroundTint="@color/main_color"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPump"
        tools:text="ON" />

</androidx.constraintlayout.widget.ConstraintLayout>